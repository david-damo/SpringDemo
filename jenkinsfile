pipeline {
    agent any

    stages {
        stage('Create Manifest') {
            steps {
                script {
                    def manifestContent = '''
                        Name: Sample Application
                        Version: 1.0.0
                        Description: This is a sample manifest file created by Jenkins Pipeline
                        Author: Your Name
                    '''
                    writeFile file: 'manifest.txt', text: manifestContent.trim()
                }
            }
        }
    }
}
